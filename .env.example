# LLM API (OpenAI-compatible)
LLM_API_KEY="your_llm_api_key_here"
LLM_API_BASE_URL="https://api.openai.com/v1"
LLM_DEFAULT_MODEL="gpt-oss-120b"

# Image API (POE-compatible)
IMAGE_API_KEY="your_image_api_key_here"
IMAGE_API_URL="https://api.poe.com/v1"
IMAGE_MODEL="nano-banana"

# External TTS API (optional). If empty, fallback to edge-tts
TTS_API_URL=""

# Optional subtitle font path (recommended for Chinese subtitles)
# e.g. SUBTITLE_FONT_PATH="C:/Windows/Fonts/msyh.ttc"
SUBTITLE_FONT_PATH=""

# App
BACKEND_PORT=8000
OUTPUT_DIR="outputs"
TEMP_DIR="outputs/temp"
CHARACTER_REF_DIR="assets/character_refs"
SCENE_CACHE_DIR="assets/scene_cache/images"
SCENE_CACHE_INDEX_PATH="assets/scene_cache/index.json"
LOG_DIR="logs"
LOG_LEVEL="INFO"

# CORS
CORS_ALLOW_ORIGINS="*"

# NOTE:
# Segment behavior is controlled by frontend/API payload:
# - sentences_per_segment
# - max_segment_groups (0 = process all)
